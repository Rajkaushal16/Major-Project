<% layout("/layouts/boilerplate") -%>

<div class="row mt-3">
    <h1 class="col-6 offset-3">SignUp on Wonderlust</h1>
    <div class="col-6 offset-3" >

      <form action="/signup" method="POST" class="needs-validation" novalidate> 

<div class="mb-3">
    <label for="username" class="form-lable">Username</label>
    <input name="username" placeholder="" type="text" class="form-control" required/>
    <div class="valid-feedback">Looks Good!</div>
  </div>

  
<div class="mb-3">
    <label for="email" class="form-lable">Email</label>
    <input name="email" placeholder="" type="email" class="form-control" required/>
    <div class="valid-feedback">Looks Good!</div>
  </div>

  <div class="mb-3">
    <label for="password" class="form-lable">Password</label>
    <input name="password" placeholder="" type="password" class="form-control" required/>
    <div class="valid-feedback">Looks Good!</div>
  </div>

  <button class="btn btn-success">SignUp</button>

      </form>

    </div>
</div>